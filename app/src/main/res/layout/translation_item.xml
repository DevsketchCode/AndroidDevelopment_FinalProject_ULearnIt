<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_TranslationEntryContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00FF0808"
    android:focusable="auto"
    android:orientation="vertical"
    android:padding="6dp"
    android:weightSum="5">

    <androidx.cardview.widget.CardView
        android:id="@+id/translationEntryCardLayout"
        style="@style/translation_list_cards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="6dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        app:cardMaxElevation="6dp"
        app:contentPadding="4dp">

        <LinearLayout
            android:id="@+id/layout_TranslationEntryContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00FF0808"
            android:elevation="10dp"
            android:focusable="auto"
            android:orientation="horizontal"
            android:padding="0dp"
            android:weightSum="5"
            android:baselineAligned="false">

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/flexboxLayout_translationItem"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:flexWrap="wrap"
                app:alignItems="center"
                app:justifyContent="space_evenly"
                android:layout_weight="4">

                <androidx.cardview.widget.CardView
                    android:id="@+id/translationEntryCardLeft"
                    style="@style/translation_list_cards"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:layout_weight="2"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="0dp"
                    app:cardMaxElevation="0dp"
                    app:contentPadding="4dp"
                    app:layout_flexGrow="1">

                    <TextView
                        android:id="@+id/firstLangTranslation"
                        style="@style/translation_entry_firstLang" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/translationEntryCardRight"
                    style="@style/translation_list_cards"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:layout_weight="2"
                    android:layout_marginStart="20dp"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="0dp"
                    app:cardMaxElevation="0dp"
                    app:contentPadding="4dp"
                    app:layout_flexGrow="1">

                    <TextView
                        android:id="@+id/secondLangTranslation"
                        style="@style/translation_entry_secondLang" />
                </androidx.cardview.widget.CardView>

            </com.google.android.flexbox.FlexboxLayout>

            <LinearLayout
                android:id="@+id/layout_TranslationEntry"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#00FF0808"
                android:elevation="10dp"
                android:focusable="auto"
                android:orientation="horizontal"
                android:padding="0dp"
                android:layout_weight="1">

                <androidx.cardview.widget.CardView
                    android:id="@+id/translationEntryCardMore"
                    style="@style/translation_list_cards"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="0dp"
                    app:cardMaxElevation="0dp"
                    app:contentPadding="4dp">

                    <ImageView
                        android:id="@+id/more_imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:backgroundTintMode="multiply"
                        android:contentDescription="@string/translation_item_favorites_toggle_content_desc"
                        android:scaleType="centerCrop"
                        android:scaleX="1"
                        android:scaleY="1"
                        app:srcCompat="@drawable/ic_more_vert_black"
                        app:tint="#333333"
                        tools:ignore="ImageContrastCheck" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/translationEntryFavorite"
                    style="@style/translation_list_cards"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="0dp"
                    app:cardMaxElevation="0dp"
                    app:contentPadding="4dp">

                    <ImageView
                        android:id="@+id/favorite_imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:backgroundTintMode="multiply"
                        android:contentDescription="@string/translation_item_favorites_toggle_content_desc"
                        app:srcCompat="@drawable/ic_unfavorite"
                        app:tint="#FF0000"
                        tools:ignore="ImageContrastCheck" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
<!-- TODO: Want to add a popup window with the details when the details button is clicked. It should also have an X to close the window when finished. -->

<LinearLayout
        android:id="@+id/layout_TranslationEntryDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners_transparentbg"
        android:backgroundTint="@color/darker_shaded_grey"
        android:focusable="auto"
        android:orientation="vertical"
        android:paddingStart="6dp"
        android:paddingTop="6dp"
        android:paddingEnd="6dp"
        android:paddingBottom="6dp"
        android:translationY="-8dp"
        android:visibility="gone"
        android:weightSum="5">

        <androidx.cardview.widget.CardView
            android:id="@+id/translationEntryCardDetails"
            style="@style/translation_list_cards"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp"
            app:cardMaxElevation="8dp"
            app:contentPadding="4dp">

            <TextView
                android:id="@+id/langTranslationEntryType"
                style="@style/translation_entry_firstLang" />
        </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/translationTenseCardDetails"
        style="@style/translation_list_cards"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:cardMaxElevation="8dp"
        app:contentPadding="4dp">

        <TextView
            android:id="@+id/langTranslationTense"
            style="@style/translation_entry_firstLang" />
    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/translationNotesCardDetails"
            style="@style/translation_list_cards"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp"
            app:cardMaxElevation="8dp"
            app:contentPadding="4dp">

            <TextView
                android:id="@+id/langTranslationNotes"
                style="@style/translation_entry_secondLang"
                android:singleLine="false" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>