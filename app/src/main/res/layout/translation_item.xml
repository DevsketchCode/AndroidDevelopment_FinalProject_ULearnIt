<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_TranslationEntryContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00FF0808"
    android:focusable="auto"
    android:orientation="vertical"
    android:padding="6dp"
    android:weightSum="5">

    <LinearLayout
        android:id="@+id/layout_TranslationEntry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00FF0808"
        android:focusable="auto"
        android:orientation="horizontal"
        android:padding="6dp"
        android:weightSum="5">

        <androidx.cardview.widget.CardView
            android:id="@+id/translationEntryCardLeft"
            style="@style/translation_list_cards"
            android:layout_height="match_parent"
            android:layout_weight="2.25"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp"
            app:cardMaxElevation="8dp"
            app:contentPadding="4dp">

            <TextView
                android:id="@+id/firstLangTranslation"
                style="@style/translation_entry" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/translationEntryCardRight"
            style="@style/translation_list_cards"
            android:layout_height="match_parent"
            android:layout_weight="2.25"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp"
            app:cardMaxElevation="8dp"
            app:contentPadding="4dp">

            <TextView
                android:id="@+id/secondLangTranslation"
                style="@style/translation_entry" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/translationEntryFavorite"
            style="@style/translation_list_cards"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp"
            app:cardMaxElevation="8dp"
            app:contentPadding="4dp">

            <ImageView
                android:id="@+id/favorite_imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTintMode="multiply"
                android:contentDescription="@string/translation_item_favorites_toggle_content_desc"
                app:srcCompat="@drawable/ic_unfavorite"
                app:tint="#FF0000"
                tools:ignore="ImageContrastCheck" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_TranslationEntryDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10px"
        android:background="#B6CFED"
        android:focusable="auto"
        android:orientation="vertical"
        android:paddingStart="6dp"
        android:paddingTop="2dp"
        android:paddingEnd="6dp"
        android:paddingBottom="6dp"
        android:visibility="gone"
        android:weightSum="5">

        <androidx.cardview.widget.CardView
            android:id="@+id/translationEntryCardDetails"
            style="@style/translation_list_cards"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp"
            app:cardMaxElevation="8dp"
            app:contentPadding="4dp">

            <TextView
                android:id="@+id/langTranslationEntryType"
                style="@style/translation_entry" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/translationNotesCardDetails"
            style="@style/translation_list_cards"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp"
            app:cardMaxElevation="8dp"
            app:contentPadding="4dp">

            <TextView
                android:id="@+id/langTranslationNotes"
                style="@style/translation_entry" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>