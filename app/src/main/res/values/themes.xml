<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ULearnIt" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_100</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_300</item>
        <item name="colorSecondaryVariant">@color/purple_100</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Accent color. -->
        <item name="colorAccent">@color/orange_500</item>
        <item name="colorOnBackground">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="actionBarStyle" parent="@style/Widget.AppCompat.ActionBar">@style/ActionBar</item>
        <!-- Customize Overflow menu button. -->
        <item name="android:actionOverflowButtonStyle">@style/MyOverflowButtonStyle</item>
    </style>

    <!-- for the entry detail popup window -->
    <!--
    <style name="Theme.ULearnIt.Popup">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>
    -->

    <style name="Theme.ULearnIt.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ULearnIt.Header_Linear_Layout" parent="Theme.ULearnIt">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:alpha">0.8</item>
        <item name="android:background">?attr/colorPrimaryVariant</item>
        <item name="android:color">?attr/colorOnBackground</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:elevation">3dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="MyOverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">?attr/colorOnPrimary</item>
    </style>

    <style name="Theme.ULearnIt.AppBarOverlay">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <!-- Set the primary color of the text for DayMode to this color -->
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
    </style>

    <style name="Theme.ULearnIt.AppBarOverlay.Text" parent="@android:style/TextAppearance">
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="Theme.ULearnIt.PopupOverlay" parent="ThemeOverlay.AppCompat.DayNight">
        <!-- This is the popup menu -->
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="ActionBar">
        <item name="background">?attr/colorPrimary</item>
        <item name="android:color">?attr/colorOnPrimary</item>
    </style>
</resources>