<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Custom styles -->
    <style name="category_button_image">
        <item name="android:layout_width">@dimen/category_button_width</item>
        <item name="android:layout_height">@dimen/category_button_height</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@drawable/rounded_corners_transparentbg</item>
    </style>

    <style name="category_button_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:background">@drawable/rounded_corners_cat_text_bgcolor</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="translation_entry_firstLang">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLength">100</item>
    </style>

    <style name="translation_entry_secondLang">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLength">100</item>
    </style>

    <style name="translation_list_cards">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="style_Heading_LinearLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:alpha">0.8</item>
        <item name="android:background">#323E43</item>
        <item name="android:elevation">3dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="style_entry_modifier_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="style_entry_modifier_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">30dp</item>
    </style>

    <style name="style_entry_modifier_edittext">
        <item name="android:background">@drawable/entry_edit_boxes_rounded_with_border</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">3dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:importantForAutofill">no</item>
        <item name="android:inputType">text|textCapSentences</item>
        <item name="android:maxLength">100</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textColor">@color/black</item>
    </style>



    <style name="header_message_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#F7FCFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">#B3000000</item>
    </style>

    <style name="quiz_option_buttons">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:autoSizeMaxTextSize">36sp</item>
        <item name="android:autoSizeMinTextSize">12sp</item>
        <item name="android:elevation">20dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="quiz_button_default_color">
        <item name="colorAccent">@color/purple_500</item>
    </style>
    <style name="quiz_button_correct">
        <item name="colorAccent">@color/correct</item>
    </style>
    <style name="quiz_button_wrong">
        <item name="colorAccent">@android:color/holo_red_light</item>
    </style>

    <style name="about_text_views">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="about_me_text_view">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>