<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Custom styles -->
    <style name="category_button_image">
        <item name="android:layout_width">@dimen/category_button_width</item>
        <item name="android:layout_height">@dimen/category_button_height</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@drawable/rounded_corners_transparentbg</item>
    </style>

    <style name="category_button_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:background">@drawable/rounded_corners_cat_text_bgcolor</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="category_count_button_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/rounded_corners_cat_text_bgcolor</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="translation_entry_firstLang">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLength">100</item>
    </style>

    <style name="translation_entry_secondLang">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLength">100</item>
    </style>

    <style name="translation_entry_summaryNotes">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:maxLength">100</item>
    </style>

    <style name="translation_entry_summarizedDetails_Cards">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:minWidth">25dp</item>
        <item name="cornerRadius">1dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardMaxElevation">1dp</item>
    </style>

    <style name="translation_entry_summarizedDetails">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:maxLength">100</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
    </style>

    <style name="translation_list_cards">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:minWidth">25dp</item>
    </style>

    <style name="style_Heading_LinearLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#323E43</item>
        <item name="android:elevation">3dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="style_entry_modifier_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="style_entry_modifier_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">30dp</item>
    </style>

    <style name="style_entry_modifier_edittext">
        <item name="android:background">@drawable/entry_edit_boxes_rounded_with_border</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">3dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:importantForAutofill">no</item>
        <item name="android:inputType">text|textCapSentences</item>
        <item name="android:maxLength">100</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textColor">@color/black</item>
    </style>



    <style name="header_message_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">#323E43</item>
    </style>

    <style name="quiz_option_buttons">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:autoSizeMaxTextSize">36sp</item>
        <item name="android:autoSizeMinTextSize">12sp</item>
        <item name="android:elevation">20dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="quiz_button_default_color">
        <item name="colorAccent">@color/purple_500</item>
    </style>
    <style name="quiz_button_correct">
        <item name="colorAccent">@color/correct</item>
    </style>
    <style name="quiz_button_wrong">
        <item name="colorAccent">@android:color/holo_red_light</item>
    </style>

    <style name="about_text_views">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="about_me_text_view">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!-- for the entry detail popup window -->
    <style name="Theme.ULearnIt.Popup">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="details_container_style_lang">
        <item name="android:layout_width">0dp</item>
        <item name="android:background">?attr/colorOnPrimary</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="details_container_style_entry">
        <item name="android:layout_width">0dp</item>
        <item name="android:background">?attr/colorOnPrimary</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="details_container_style_romanized">
        <item name="android:layout_width">0dp</item>
        <item name="android:background">?attr/colorOnPrimary</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="details_container_style_general_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:background">?attr/colorOnPrimary</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:minHeight">25dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="details_container_style_example">
        <item name="android:layout_width">0dp</item>
        <item name="android:background">?attr/colorOnPrimary</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:minHeight">25dp</item>
        <item name="android:maxLines">999</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:ellipsize">none</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="detail_container_style_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">-15dp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">11sp</item>
    </style>
</resources>