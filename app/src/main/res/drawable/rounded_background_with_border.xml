<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/rounded_background_with_border.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Black border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00000000" />
            <corners android:radius="12dp" /> <!-- Adjust the radius as needed -->
        </shape>
    </item>

    <!-- Background color -->
    <item android:left="1dp" android:right="1dp" android:top="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#DDFFFFFF" />
            <corners android:radius="12dp" /> <!-- Adjust the radius as needed -->
        </shape>
    </item>
</layer-list>