<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/rounded_background_with_border.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background color -->
    <item android:left="1dp" android:right="1dp" android:top="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorPrimaryVariant" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- White tint -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#80FFFFFF" /> <!-- Adjust the alpha value as needed -->
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Inner shadow -->
    <!-- Top shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:startColor="#44000000"
                android:centerColor="#01000000"
                android:endColor="#00000000"
                android:centerY=".12" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Inner shadow -->
    <!-- Right shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="180"
                android:startColor="#44000000"
                android:centerColor="#01000000"
                android:endColor="#00000000"
                android:centerY=".09" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Top and right border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00000000" />
            <stroke
                android:color="#15000000"
                android:width="1dp"/>
            <corners android:radius="8dp" />
        </shape>
    </item>

</layer-list>