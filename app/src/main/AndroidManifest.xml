<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.cvtc.doberlander.ulearnit">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_ulearnit_logo_foreground"
        android:supportsRtl="true"
        android:theme="@style/Theme.ULearnIt">
        <activity
            android:name=".HelpActivity"
            android:exported="false" />
        <activity
            android:name=".WebTranslateActivity"
            android:exported="false" />
        <activity
            android:name=".AboutActivity"
            android:exported="false"
            android:parentActivityName=".CategoryActivity"
            android:screenOrientation="portrait">

            <!-- meta data is used for API levels below AP 16 -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".CategoryActivity" />
        </activity> <!-- windowSoftInputMode is set to allow for the page to scroll when the keyboard is up -->
        <activity
            android:name=".EntryModifierActivity"
            android:exported="false"
            android:parentActivityName=".CategoryActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize">

            <!-- meta data is used for API levels below AP 16 -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".CategoryActivity" />
        </activity>
        <activity
            android:name=".ResultsActivity"
            android:exported="false"
            android:parentActivityName=".CategoryActivity"
            android:screenOrientation="portrait">

            <!-- meta data is used for API levels below AP 16 -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".CategoryActivity" />
        </activity>
        <activity
            android:name=".QuizActivity"
            android:exported="false"
            android:parentActivityName=".CategoryActivity"
            android:screenOrientation="portrait">

            <!-- meta data is used for API levels below AP 16 -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".CategoryActivity" />
        </activity>
        <activity
            android:name=".CategoryActivity"
            android:exported="true"
            android:label="Category"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait">

            <!-- meta data is used for API levels below AP 16 -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.ULearnIt.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>